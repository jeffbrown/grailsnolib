<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.grails</groupId>
        <artifactId>grails</artifactId>
        <version>@grails.version@</version>
        <relativePath>grails.pom</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>grails-bootstrap</artifactId>
    <packaging>jar</packaging>
    <name>Grails bootstrap</name>
    <description>Required to use the Grails build system.</description>
    <url>http://www.grails.org</url>

    <dependencies>
        <!-- External Dependencies -->
        <dependency>
          <groupId>org.gparallelizer</groupId>
          <artifactId>GParallelizer</artifactId>
          <version>0.8.3</version>
        </dependency>
        
        <dependency>
            <groupId>org.codehaus.gant</groupId>
            <artifactId>gant_groovy1.6</artifactId>
            <version>1.6.0</version>
            <exclusions>
                <!-- The Maven ant tasks break any maven build that includes a Grails project. -->
                <!-- Ivy is simply unnecessary because we don't use the IvyTool.               -->
                <exclusion>
                    <groupId>org.apache.maven</groupId>
                    <artifactId>maven-ant-tasks</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>>org.apache.ivy</groupId>
                    <artifactId>ivy</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>commons-cli</groupId>
                    <artifactId>commons-cli</artifactId>
                </exclusion>

                <!-- We already include this for Grails. -->
                <exclusion>
                    <groupId>org.codehaus.groovy</groupId>
                    <artifactId>groovy-all</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

<!-- Grails Dependencies -->

<!-- Runtime Dependencies -->
        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.7.1</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-launcher</artifactId>
            <version>1.7.1</version>
            <scope>compile</scope>
        </dependency>

<!-- Test Dependencies -->
    </dependencies>
</project>
